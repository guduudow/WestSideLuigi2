@model WestSideLuigis.Models.CategoryDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete Category Confirmation</title>
</head>
<body>
    <h2>Delete Category Confirmation</h2>

    <p>Are you sure you want to delete the @Model.CategoryName?</p>

    <form action="/Category/Delete/@Model.CategoryId" method="POST">
        <input type="submit" value="Confirm Delete" />
        <a href="/Category/Details/@Model.CategoryId">Cancel</a>
    </form>
</body>
</html>

