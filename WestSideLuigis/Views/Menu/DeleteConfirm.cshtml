@model RestaurantAPI_PassionProject.Models.MenuDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<!DOCTYPE html>
<html>
<head>
    <title>Delete Menu Item Confirmation</title>
</head>
<body>
    <h2>Delete Menu Item Confirmation</h2>

    <p>Are you sure you want to delete the following menu item?</p>
    <dl>
        <dt>Name:</dt>
        <dd>@Model.ItemName</dd>
        <dt>Price:</dt>
        <dd>@Model.Price</dd>
        <dt>Description:</dt>
        <dd>@Model.ItemDescription</dd>
        <!-- Add more details as needed -->
    </dl>

    <form action="/Menu/Delete/@Model.ItemID" method="POST">
        <input type="submit" value="Confirm Delete" />
        <a href="/Menu/Details/@Model.ItemID">Cancel</a>
    </form>
</body>
</html>

