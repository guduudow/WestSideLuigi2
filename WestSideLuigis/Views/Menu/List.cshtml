@model IEnumerable<RestaurantAPI_PassionProject.Models.MenuDto>
@{
    ViewBag.Title = "List";
}

<h2>Menu Items</h2>
<div><a href="/Menu/New">Add Item</a></div>

@foreach (var menu in Model)
{
    <h2><a href="/Menu/Details/@menu.ItemID">@menu.ItemName</a></h2>
    <div>Price: @menu.Price</div>
    <div>Category: @menu.CategoryName</div>
    <a href="/Orders/OrdersForMenuItem/@menu.ItemID"> Orders for this item</a>
    
}

